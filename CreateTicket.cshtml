@model YourNamespace.Models.Ticket

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Support Ticket System</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

<div class="container">
    <header>
        <h1>SUPPORT CENTER</h1>
        <p>Ege Ulu - Support Ticket System</p>
        <nav class="navbar">
            <a href="#">Support-Center-Startseite</a>
            <a href="#">Neues Ticket eröffnen</a>
            <a href="#">Ticket-Status überprüfen</a>
        </nav>
    </header>

    <h2>Neues Ticket eröffnen</h2>
    <p>Bitte füllen Sie das Formular vollständig aus.</p>

    <!-- Formular an den Controller senden -->
    <form asp-action="CreateTicket" asp-controller="Ticket" method="post" id="ticketForm">
        <section class="contact-info">
            <label for="email">E-Mail-Adresse <span class="required">*</span></label>
            <input type="email" asp-for="Email" placeholder="Ihre E-Mail-Adresse" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label for="name">Vollständiger Name <span class="required">*</span></label>
            <input type="text" asp-for="Name" placeholder="Ihr vollständiger Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>

            <!-- Nachrichtenfeld für "Erw:" -->
            <div class="message-section">
                <label for="message">Ihre Nachricht:</label>
                <textarea asp-for="Message" rows="3" placeholder="" class="form-control"></textarea>
            </div>
        </section>

        <label for="topic">Hilfethema</label>
        <select asp-for="Topic" class="form-control" required>
            <option value="">-- Hilfethema auswählen --</option>
            <option value="other">Anderes Problem melden</option>
            <option value="beamer">Beamer</option>
            <option value="feedback">Feedback</option>
            <option value="hardware">HARDWARE</option>
            <option value="hellraumprojektor">Hellraumprojektor</option>
            <option value="login-mediathek">Login (Mediathek)</option>
            <option value="login-schulnetz">Login (Schulnetz)</option>
            <option value="login-www">Login (www.schulen.ch)</option>
            <option value="software">SOFTWARE</option>
            <option value="visualizer">Visualizer</option>
        </select>
        <span asp-validation-for="Topic" class="text-danger"></span>

        <div class="captcha-section">
            <div class="captcha">
                <span id="captchaCode" class="captcha-code"></span>
                <button type="button" onclick="generateCaptcha()">Captcha erneuern</button>
            </div>
            <label for="captchaInput">Geben Sie den Text aus dem CAPTCHA ein:</label>
            <input type="text" asp-for="Captcha" placeholder="CAPTCHA eingeben" class="form-control" required />
            <span asp-validation-for="Captcha" class="text-danger"></span>
        </div>

        <div class="buttons">
            <button type="submit" class="submit-btn">Ticket eröffnen</button>
            <button type="reset" class="reset-btn">Zurücksetzen</button>
            <button type="button" class="cancel-btn" onclick="cancelTicket()">Abbrechen</button>
        </div>
    </form>

    <footer>
        <p>Copyright © 2024 Helpdesk Ege - All rights reserved.</p>
        <p>powered by EgeTicket</p>
    </footer>
</div>

<script src="script.js"></script>
</body>
</html>
